#!/usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'
$CELLULA_PATH = File.expand_path(File.dirname(__FILE__)) + '/..'

require 'cellula'
include Cellula

banner

if ARGV[0].nil?
  usage
  exit
end

load ARGV[0].dup
puts @study.say_hello
puts

@auto.generate(@study.generations) do |num, generation|
  printf "%4s: %s\n", num, generation.join()
end
