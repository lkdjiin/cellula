#!/usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'
$CELLULA_PATH = File.expand_path(File.dirname(__FILE__)) + '/..'

require 'cellula'
include Cellula

banner

if ARGV[0].nil?
  usage
  exit
end

load ARGV[0].dup
@auto.generate(@student.generations) do |num, generation|
  printf "Gen %4s: %s\n", num, generation.join()
end
puts @student.say_hello
